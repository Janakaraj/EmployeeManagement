@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>
<a class="btn btn-warning" style="width:auto"
   asp-controller="Admin" asp-action="CreateRole">
    Create New Role
</a>
<div class="list-group">
    <div class="list-group-item">
        <div class="row">
            <div class="col-md-5">
                <h5>Role ID</h5>
            </div>
            <div class="col-md-4">
                <h5>Role Name</h5>
            </div>
        </div>
    </div>
@if (Model.Any())
{
    foreach (var role in Model)
    {
<div class="list-group-item">
    <div class="row">
        <div class="col-md-5">
            <p>@role.Id</p>
        </div>
        <div class="col-md-4">
            <p>@role.Name</p>
        </div>
    </div>
 </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
    </div>
}
</div>